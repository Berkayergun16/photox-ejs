<%- include('./partials/_header.ejs') %>
   <body class="main-layout inner_page">
   <%- include('./partials/_loader.ejs') %>
       <%- include('./partials/_menu.ejs') %>
        <!-- about -->
      <div class="about">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <div class="titlepage text_align_left">
                
                <h2><%=photo.name%></h2>
                <p> <%=photo.description%></p>
                <a class="read_more" href="/users/detail/<%=photo.user.id %>">Artist : <%= photo.user.username %></a>

                <div style="margin-top: 30px ;">
                  <ul style="display: flex; justify-content: space-between;">
                     <li><a style="min-width: 266px;" class="read_more" href="/photos/<%= photo.id %>/update?_method=PUT">Update</a></li>
                     <li><a style="min-width: 266px;" class="read_more" href="/photos/<%= photo.id %>/delete?_method=DELETE" onclick="return confirm('Are You Sure?')">Delete</a></li>
                  </ul>
               </div>


              </div>
            </div>
            <div class="col-md-6">
              <div class="about_img">
                <figure><img src="<%= photo.url %>" alt="<%= photo.name %>"/></figure>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- end about -->

   <%- include('./partials/_footer.ejs') %>